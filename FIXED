local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer

-- Parent GUI to PlayerGui if possible (safer than CoreGui)
local function getGuiParent()
	-- try PlayerGui first (LocalScript normal environment)
	if LocalPlayer and LocalPlayer:FindFirstChild("PlayerGui") then
		return LocalPlayer.PlayerGui
	end
	-- fallback: CoreGui (some executors allow)
	if game:FindFirstChild("CoreGui") then
		return game.CoreGui
	end
	-- last fallback: script parent
	return script
end

local guiParent = getGuiParent()

-- === GUI setup ===
