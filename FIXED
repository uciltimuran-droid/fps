-- States & storage
local state = {
	esp = false,
	distance = false,
	gun = false,
	maintainSpeed = false,
	god = false,
}

local defaultWalkSpeed = 16
local maintainedSpeed = nil
local humanoidRef = nil

-- espMap[player] = { gui, name, gun, dist, adornee, lastChar }
local espMap = {}

-- Common ammo name candidates
local ammoNames = {"Ammo","Bullets","CurrentAmmo","Magazine","AmmoCount","Rounds","Clip"}

-- utility: find best adornee
local function getAdornee(character)
	if not character then return nil end
	local head = character:FindFirstChild("Head")
	if head and head:IsA("BasePart") then return head end
	local hrp = character:FindFirstChild("HumanoidRootPart")
	if hrp and hrp:IsA("BasePart") then return hrp end
	for _,p in pairs(character:GetChildren()) do
		if p:IsA("BasePart") then return p end
	end
	return nil
end

-- ammo detection (robust)
local function findAmmoValue(tool)
	if not tool then return nil end
	-- attributes first
	if tool.GetAttribute then
		for _,name in ipairs(ammoNames) do
			local attr = tool:GetAttribute(name)
			if attr ~= nil then return tostring(attr) end
		end
	end
	-- children values
	for _,child in pairs(tool:GetChildren()) do
		if child:IsA("IntValue") or child:IsA("NumberValue") then
			local lname = child.Name:lower()
			for _,k in ipairs(ammoNames) do
				if lname:find(k:lower()) then return tostring(child.Value) end
			end
		elseif child:IsA("StringValue") then
			local lname = child.Name:lower()
			for _,k in ipairs(ammoNames) do
				if lname:find(k:lower()) then return child.Value end
			end
		end
	end
	-- direct property
	if pcall(function() return tool.Ammo end) then
		local ok, val = pcall(function() return tool.Ammo end)
		if ok and val ~= nil then return tostring(val) end
	end
	return nil
end

-- create ESP
local function createESPForPlayer(player)
	if player == LocalPlayer then return end
	if espMap[player] then return end
	local char = player.Character
	if not char then return end
	local adornee = getAdornee(char)
	if not adornee then return end

	local bill = Instance.new("BillboardGui")
	bill.Name = player.Name .. "_M_W_ESP"
	bill.Adornee = adornee
	bill.Size = UDim2.new(0,240,0,88)
	bill.AlwaysOnTop = true
	bill.ExtentsOffset = Vector3.new(0,1.6,0)
	bill.Parent = screenGui

	local nameLabel = Instance.new("TextLabel", bill)
	nameLabel.Name = "NameLabel"
	nameLabel.Size = UDim2.new(1,0,0,26)
	nameLabel.Position = UDim2.new(0,0,0,0)
	nameLabel.BackgroundTransparency = 1
	nameLabel.Font = Enum.Font.GothamBold
	nameLabel.TextSize = 14
	nameLabel.TextColor3 = Color3.fromRGB(0,255,255)
	nameLabel.Text = player.Name

	local gunLabel = Instance.new("TextLabel", bill)
	gunLabel.Name = "GunLabel"
	gunLabel.Size = UDim2.new(1,0,0,18)
	gunLabel.Position = UDim2.new(0,0,0,28)
	gunLabel.BackgroundTransparency = 1
	gunLabel.Font = Enum.Font.Gotham
	gunLabel.TextSize = 12
	gunLabel.TextColor3 = Color3.fromRGB(220,220,220)
	gunLabel.Text = ""
	gunLabel.Visible = state.gun

	local distLabel = Instance.new("TextLabel", bill)
	distLabel.Name = "DistLabel"
	distLabel.Size = UDim2.new(1,0,0,16)
	distLabel.Position = UDim2.new(0,0,1,-16)
	distLabel.BackgroundTransparency = 1
	distLabel.Font = Enum.Font.Gotham
	distLabel.TextSize = 12
	distLabel.TextColor3 = Color3.fromRGB(255,255,255)
	distLabel.Text = ""
	distLabel.Visible = state.distance

	espMap[player] = {
		gui = bill,
		name = nameLabel,
		gun = gunLabel,
		dist = distLabel,
		adornee = adornee,
		lastChar = char
	}
end

local function destroyESPForPlayer(player)
	local d = espMap[player]
	if not d then return end
	if d.gui and d.gui.Parent then d.gui:Destroy() end
	espMap[player] = nil
end

local function ensureAll()
	for _,p in pairs(Players:GetPlayers()) do
		if p ~= LocalPlayer and p.Character and p.Character.Parent and state.esp and not espMap[p] then
			pcall(function() createESPForPlayer(p) end)
		end
	end
end

-- single update loop
RunService.RenderStepped:Connect(function()
	-- maintain walk speed if enabled
	if state.maintainSpeed and maintainedSpeed then
		local hum = LocalPlayer.Character and LocalPlayer.Character:FindFirstChildOfClass("Humanoid")
		if hum then
			-- keep humanoidRef updated
			humanoidRef = hum
			pcall(function() hum.WalkSpeed = maintainedSpeed end)
		end
	end

	-- god mode: keep health at max
	if state.god then
		local hum = LocalPlayer.Character and LocalPlayer.Character:FindFirstChildOfClass("Humanoid")
		if hum then
			-- try to prevent dying by forcing health = max
			pcall(function()
				-- ensure MaxHealth at least default
				if hum.MaxHealth < 1 then
					hum.MaxHealth = math.max(100, hum.MaxHealth)
				end
				hum.Health = hum.MaxHealth
			end)
		end
	end

	-- ESP updates
	if state.esp then
		local localRoot = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
		for player, data in pairs(espMap) do
			-- validate player/character
			if not player.Parent then
				destroyESPForPlayer(player)
			else
				local char = player.Character
				if data.lastChar ~= char then
					-- respawn -> recreate
					destroyESPForPlayer(player)
					if state.esp and char and char.Parent then
						pcall(function() createESPForPlayer(player) end)
					end
				else
					-- normal update
					pcall(function()
						data.name.Text = player.Name
						-- distance
						if state.distance and localRoot and char and char.Parent then
							local adorn = getAdornee(char)
							if adorn then
								data.dist.Text = string.format("[%.0f m]", (localRoot.Position - adorn.Position).Magnitude)
								data.dist.Visible = true
								if data.gui.Adornee ~= adorn then
									data.gui.Adornee = adorn
									data.adornee = adorn
								end
							else
								data.dist.Visible = false
							end
						else
							data.dist.Visible = false
						end

						-- gun detection
						if state.gun then
							-- try find tool in character
							local equippedTool = nil
							if char then
								for _,c in pairs(char:GetChildren()) do
									if c:IsA("Tool") then
										equippedTool = c
										break
									end
								end
							end
							if equippedTool then
								local ammo = findAmmoValue(equippedTool)
								if ammo then
									data.gun.Text = string.format("Weapon: %s | Ammo: %s", equippedTool.Name, ammo)
								else
									data.gun.Text = string.format("Weapon: %s | Ammo: -", equippedTool.Name)
								end
							else
								data.gun.Text = "Weapon: -"
							end
							data.gun.Visible = true
						else
							data.gun.Visible = false
						end
					end)
				end
			end
		end
	end

	-- try to create for any missed players
	ensureAll()
end)

-- Button logic
espToggleBtn.MouseButton1Click:Connect(function()
	state.esp = not state.esp
	espToggleBtn.Text = state.esp and "ESP Player : ON" or "ESP Player : OFF"
	if state.esp then
		for _,p in pairs(Players:GetPlayers()) do
			if p ~= LocalPlayer and p.Character and p.Character.Parent then
				pcall(function() createESPForPlayer(p) end)
			end
		end
	else
		for p,_ in pairs(espMap) do destroyESPForPlayer(p) end
	end
end)

distToggleBtn.MouseButton1Click:Connect(function()
	state.distance = not state.distance
	distToggleBtn.Text = state.distance and "ESP Distance : ON" or "ESP Distance : OFF"
	for _,d in pairs(espMap) do if d.dist then d.dist.Visible = state.distance end end
end)

gunToggleBtn.MouseButton1Click:Connect(function()
	state.gun = not state.gun
	gunToggleBtn.Text = state.gun and "ESP Gun : ON" or "ESP Gun : OFF"
	for _,d in pairs(espMap) do if d.gun then d.gun.Visible = state.gun end end
end)

-- WalkSpeed handlers
local function getLocalHumanoid()
	if LocalPlayer.Character then
		return LocalPlayer.Character:FindFirstChildOfClass("Humanoid")
	end
	return nil
end

setWsBtn.MouseButton1Click:Connect(function()
	local text = wsInput.Text
	local num = tonumber(text)
	if not num or num <= 0 then
		wsInput.Text = ""
		wsInput.PlaceholderText = "Invalid value"
		task.delay(1.2, function() if wsInput then wsInput.PlaceholderText = "16 (default)" end end)
		return
	end
	local hum = getLocalHumanoid()
	if hum then
		if defaultWalkSpeed == nil then defaultWalkSpeed = hum.WalkSpeed end
		pcall(function() hum.WalkSpeed = num end)
		maintainedSpeed = num
		humanoidRef = hum
		wsInput.Text = ""
		wsInput.PlaceholderText = tostring(num)
	else
		wsInput.PlaceholderText = "No Humanoid"
		task.delay(1.2, function() if wsInput then wsInput.PlaceholderText = "16 (default)" end end)
	end
end)

maintainWsBtn.MouseButton1Click:Connect(function()
	state.maintainSpeed = not state.maintainSpeed
	maintainWsBtn.Text = state.maintainSpeed and "Maintain Speed : ON" or "Maintain Speed : OFF"
	if state.maintainSpeed and not maintainedSpeed then
		local hum = getLocalHumanoid()
		if hum then
			maintainedSpeed = hum.WalkSpeed
			humanoidRef = hum
		end
	end
end)

resetWsBtn.MouseButton1Click:Connect(function()
	local hum = getLocalHumanoid()
	if hum then
		pcall(function() hum.WalkSpeed = defaultWalkSpeed or 16 end)
		maintainedSpeed = nil
		state.maintainSpeed = false
		maintainWsBtn.Text = "Maintain Speed : OFF"
		wsInput.PlaceholderText = tostring(defaultWalkSpeed or 16)
	end
end)

-- God mode
godBtn.MouseButton1Click:Connect(function()
	state.god = not state.god
	godBtn.Text = state.god and "God Mode : ON" or "God Mode : OFF"
end)

-- Player events
Players.PlayerAdded:Connect(function(plr)
	plr.CharacterAdded:Connect(function(char)
		task.wait(0.6)
		if state.esp and plr ~= LocalPlayer then
			pcall(function() createESPForPlayer(plr) end)
		end
	end)
end)

Players.PlayerRemoving:Connect(function(plr)
	destroyESPForPlayer(plr)
end)

-- bind existing players
for _,p in pairs(Players:GetPlayers()) do
	if p ~= LocalPlayer then
		p.CharacterAdded:Connect(function(char)
			task.wait(0.6)
			if state.esp then pcall(function() createESPForPlayer(p) end) end
		end)
		if state.esp and p.Character and p.Character.Parent then
			pcall(function() createESPForPlayer(p) end)
		end
	end
end

-- Minimize logic
local minimized = false
minimizeBtn.MouseButton1Click:Connect(function()
	minimized = not minimized
	content.Visible = not minimized
	if minimized then
		mainFrame.Size = UDim2.new(0,180,0,40)
		minimizeBtn.Text = "+"
	else
		mainFrame.Size = UDim2.new(0,360,0,300)
		minimizeBtn.Text = "-"
	end
end)

-- Cleanup on script destroy
if script then
	script.Destroying:Connect(function()
		for p,_ in pairs(espMap) do destroyESPForPlayer(p) end
		if screenGui and screenGui.Parent then screenGui:Destroy() end
	end)
end

-- Ready
-- Provide small user feedback in output / console (optional)
print("[M-W] Panel loaded. Parent:", tostring(screenGui.Parent))
